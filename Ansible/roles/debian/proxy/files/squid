/var/log/squid/*.log {
  daily
  dateext
  dateformat -%Y%m%d-%H%M%S
  missingok
  rotate 365
  create 664 proxy proxy
  compress
  prerotate
    test ! -x /usr/sbin/sarg-reports || /usr/sbin/sarg-reports daily
  endscript
  postrotate
    test ! -e /var/run/squid.pid || test ! -x /usr/sbin/squid || /usr/sbin/squid -k rotate
  endscript
}
